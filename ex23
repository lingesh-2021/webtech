    <script>
        // JavaScript Date & Time Functions
        function updateClock() {
            const now = new Date();
            
            // Digital Clock (HH:MM:SS)
            const timeString = now.toLocaleTimeString('en-US', { 
                hour12: false, 
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit' 
            });
            document.getElementById('digitalClock').textContent = timeString;
            
            // Full Date Display
            const dateOptions = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', dateOptions);
            
            // Day Name
            document.getElementById('dayName').textContent = now.toLocaleDateString('en-US', { weekday: 'long' });
            
            // Full Date (numeric)
            document.getElementById('fullDate').textContent = now.toLocaleDateString('en-GB');
            
            // Timezone
            document.getElementById('timezone').textContent = Intl.DateTimeFormat().resolvedOptions().timeZone;
            
            // Timestamp (milliseconds)
            document.getElementById('timestamp').textContent = now.getTime().toLocaleString();
            
            // Date Formats
            document.getElementById('isoFormat').textContent = now.toISOString().slice(0, 19);
            document.getElementById('shortFormat').textContent = now.toLocaleString('en-GB');
            document.getElementById('longFormat').textContent = now.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            });
        }
        
        // Update clock every second
        updateClock(); // Initial call
        setInterval(updateClock, 1000); // Update every 1000ms (1 second)
        
        // Additional Date Object Methods Demo (Console)
        console.log('=== JavaScript Date Object Demo ===');
        const demoDate = new Date();
        console.log('Current Date:', demoDate);
        console.log('Year:', demoDate.getFullYear());
        console.log('Month (0-11):', demoDate.getMonth());
        console.log('Day (1-31):', demoDate.getDate());
        console.log('Hours (0-23):', demoDate.getHours());
        console.log('Minutes:', demoDate.getMinutes());
        console.log('Seconds:', demoDate.getSeconds());
    </script>
