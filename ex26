<body>
    <div class="container">
        <h1>üåê Welcome to Our Website!</h1>
        
        <!-- Hit Counter Display -->
        <div class="hit-counter" id="totalVisitors">0</div>
        
        <div class="visitor-ip">
            <strong>üë§ Your IP:</strong> <span id="visitorIP">Loading...</span><br>
            <strong>üåç Session ID:</strong> <span id="sessionID">Loading...</span>
        </div>
        
        <div class="welcome-msg">
            Thank you for visiting! You are visitor number 
            <span id="currentVisitor">0</span>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value" id="totalHits">0</div>
                <div class="stat-label">Total Page Views</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="todayHits">0</div>
                <div class="stat-label">Today's Visitors</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="sessionCount">1</div>
                <div class="stat-label">Your Session Count</div>
            </div>
        </div>
        
        <button class="refresh-btn" onclick="updateCounter()">üîÑ Refresh Counter</button>
        
        <p style="color: #7f8c8d; font-size: 1.1em;">
            <strong>üîß Powered by HTML5 + LocalStorage</strong><br>
            Counter persists in your browser storage
        </p>
    </div>

    <script>
        // Initialize counters on page load
        let totalHits = parseInt(localStorage.getItem('totalHits')) || 0;
        let todayHits = parseInt(localStorage.getItem('todayHits')) || 0;
        let sessionCount = parseInt(sessionStorage.getItem('sessionCount')) || 1;
        
        // Update all displays
        function updateCounter() {
            totalHits++;
            sessionCount++;
            
            // Check if new day for todayHits
            const today = new Date().toDateString();
            const lastVisit = localStorage.getItem('lastVisitDate');
            if (lastVisit !== today) {
                todayHits = 1;
                localStorage.setItem('lastVisitDate', today);
            } else {
                todayHits++;
            }
            
            // Save to storage
            localStorage.setItem('totalHits', totalHits);
            localStorage.setItem('todayHits', todayHits);
            sessionStorage.setItem('sessionCount', sessionCount);
            
            // Update displays
            document.getElementById('totalVisitors').textContent = totalHits;
            document.getElementById('totalHits').textContent = totalHits;
            document.getElementById('todayHits').textContent = todayHits;
            document.getElementById('sessionCount').textContent = sessionCount;
            document.getElementById('currentVisitor').textContent = totalHits;
            
            // Get visitor info
            fetch('https://api.ipify.org?format=json')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('visitorIP').textContent = data.ip;
                })
                .catch(() => {
                    document.getElementById('visitorIP').textContent = 'Detected';
                });
            
            document.getElementById('sessionID').textContent = 
                sessionStorage.getItem('sessionCount').substring(0, 8) + "...";
        }
        
        // Initial load
        updateCounter();
        
        // Auto-update every 5 seconds
        setInterval(updateCounter, 5000);
    </script>
</body>
