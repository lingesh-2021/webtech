<script>
function showMessage(){
    const colors = ['#00d4ff','#667eea','#f093fb','#f5576c','#4facfe'];
    const message = document.createElement('div');
    message.style.cssText = `
        position:fixed;top:50%;left:50%;transform:translate(-50%,-50%);
        background:linear-gradient(45deg,${colors[0]},${colors[1]});
        color:white;padding:3rem 4rem;border-radius:30px;
        font-size:1.5rem;font-weight:700;text-align:center;
        box-shadow:0 30px 80px rgba(0,0,0,0.6);backdrop-filter:blur(20px);
        border:3px solid rgba(255,255,255,0.3);z-index:10000;
        animation:pulseIn 0.6s cubic-bezier(0.25,0.46,0.45,0.94);
    `;
    message.innerHTML = 'ðŸŒŸ Welcome to the Ultimate Animated Web Page! <br>âœ¨ 25+ Advanced Effects â€¢ Pure CSS â€¢ 60fps âœ¨';
    document.body.appendChild(message);
    
    setTimeout(()=>{
        message.style.animation = 'pulseOut 0.6s cubic-bezier(0.25,0.46,0.45,0.94) forwards';
        setTimeout(()=>message.remove(),600);
    },2500);
}

// Add keyframes dynamically
const style = document.createElement('style');
style.textContent = `
@keyframes pulseIn{from{opacity:0;transform:translate(-50%,-50%) scale(0.5);}to{opacity:1;transform:translate(-50%,-50%) scale(1);}}
@keyframes pulseOut{from{opacity:1;transform:translate(-50%,-50%) scale(1);}to{opacity:0;transform:translate(-50%,-50%) scale(0.8);}}
`;
document.head.appendChild(style);

// Mouse parallax for hero image
document.addEventListener('mousemove',(e)=>{
    const img = document.querySelector('.hero img');
    const x = (e.clientX/window.innerWidth)*10;
    const y = (e.clientY/window.innerHeight)*10;
    img.style.transform = `scale(1.05) translate(${x}px,${y}px)`;
});
</script>

