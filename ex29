    <script>
        document.getElementById('employeeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Collect form data
            const employeeId = document.getElementById('employeeId').value;
            const fullName = document.getElementById('fullName').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value || 'Not provided';
            const department = document.getElementById('department').value;
            const designation = document.getElementById('designation').value;
            const joiningDate = document.getElementById('joiningDate').value || 'Not provided';
            const gender = document.querySelector('input[name="gender"]:checked')?.value || 'Not selected';
            
            // Collect skills
            const skillsCheckboxes = document.querySelectorAll('input[name="skills"]:checked');
            const skills = Array.from(skillsCheckboxes).map(cb => cb.value);
            
            const address = document.getElementById('address').value || 'Not provided';
            const registerTime = new Date().toLocaleString();
            
            // Display data
            document.getElementById('displayEmpId').textContent = employeeId;
            document.getElementById('displayFullName').textContent = fullName;
            document.getElementById('displayEmail').textContent = email;
            document.getElementById('displayPhone').textContent = phone;
            document.getElementById('displayDept').textContent = department;
            document.getElementById('displayDesignation').textContent = designation;
            document.getElementById('displayJoinDate').textContent = joiningDate;
            document.getElementById('displayGender').textContent = gender;
            document.getElementById('displayName').textContent = fullName;
            document.getElementById('displayAddress').textContent = address;
            document.getElementById('displayTime').textContent = registerTime;
            
            // Display skills
            const skillsDiv = document.getElementById('displaySkills');
            if (skills.length > 0) {
                skillsDiv.innerHTML = skills.map(skill => 
                    `<span style="background:#cce7ff;padding:6px 12px;margin:4px;border-radius:20px;font-size:0.95em;display:inline-block;">‚Ä¢ ${skill}</span>`
                ).join('');
            } else {
                skillsDiv.innerHTML = 'None selected';
            }
            
            // Show display section, hide form
            document.getElementById('formSection').classList.add('hidden');
            document.getElementById('displaySection').classList.remove('hidden');
            
            // Scroll to display section
            document.getElementById('displaySection').scrollIntoView({ behavior: 'smooth' });
        });
        
        function resetForm() {
            document.getElementById('employeeForm').reset();
            document.getElementById('displaySection').classList.add('hidden');
            document.getElementById('formSection').classList.remove('hidden');
            document.getElementById('formSection').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
