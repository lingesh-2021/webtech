index.html
<!DOCTYPE html>
<html>
<head>
    <title>Creative Frameset Layout</title>
</head>

<frameset rows="15%,70%,15%" border="5" bordercolor="#333">

    <!-- Header -->
    <frame src="header.html" name="header">

    <!-- Middle section -->
    <frameset cols="25%,75%">
        <frame src="menu.html" name="menu">
        <frame src="content.html" name="content">
    </frameset>

    <!-- Footer -->
    <frame src="footer.html" name="footer">

</frameset>
</html>
