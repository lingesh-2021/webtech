    <script>
        // Comprehensive Form Validation with Internal JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registrationForm');
            const submitBtn = document.getElementById('submitBtn');
            const successMessage = document.getElementById('successMessage');

            // Real-time validation
            const inputs = form.querySelectorAll('input[required], select[required]');
            inputs.forEach(input => {
                input.addEventListener('blur', validateField);
                input.addEventListener('input', validateField);
            });

            // Form submission
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                if (validateForm()) {
                    submitBtn.disabled = true;
                    submitBtn.classList.add('loading');
                    submitBtn.textContent = 'Creating Profile...';

                    // Simulate API call
                    setTimeout(() => {
                        submitBtn.disabled = false;
                        submitBtn.classList.remove('loading');
                        submitBtn.textContent = 'Profile Created!';
                        
                        form.style.display = 'none';
                        successMessage.style.display = 'block';
                        
                        // Scroll to success message
                        successMessage.scrollIntoView({ behavior: 'smooth' });
                    }, 2000);
                }
            });

            function validateField(e) {
                const field = e.target;
                const fieldId = field.id;
                const errorElement = document.getElementById(fieldId + 'Error');
                const value = field.value.trim();

                // Clear previous error styling
                field.classList.remove('error', 'success');

                let isValid = true;
                let errorMsg = '';

                switch(fieldId) {
                    case 'fullName':
                        if (value.length < 2) {
                            errorMsg = 'Name must be at least 2 characters';
                            isValid = false;
                        } else if (!/^[a-zA-Z\s]+$/.test(value)) {
                            errorMsg = 'Name should only contain letters';
                            isValid = false;
                        }
                        break;

                    case 'email':
                        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                        if (!emailRegex.test(value)) {
                            errorMsg = 'Please enter a valid email address';
                            isValid = false;
                        }
                        break;

                    case 'phone':
                        const phoneRegex = /^[6-9]\d{9}$/;
                        if (!phoneRegex.test(value)) {
                            errorMsg = 'Phone must be 10 digits starting with 6-9';
                            isValid = false;
                        }
                        break;

                    case 'college':
                        if (value.length < 3) {
                            errorMsg = 'College name must be at least 3 characters';
                            isValid = false;
                        }
                        break;

                    case 'course':
                    case 'year':
                        if (!value) {
                            errorMsg = 'Please select ' + field.name;
                            isValid = false;
                        }
                        break;

                    case 'terms':
                        if (!field.checked) {
                            errorMsg = 'You must agree to the terms and conditions';
                            isValid = false;
                        }
                        break;
                }

                if (!isValid) {
                    field.classList.add('error');
                    if (errorElement) errorElement.textContent = errorMsg;
                } else {
                    field.classList.add('success');
                    if (errorElement) errorElement.textContent = '';
                }

                return isValid;
            }

            function validateForm() {
                let isValid = true;
                const allFields = form.querySelectorAll('[required]');
                
                allFields.forEach(field => {
                    if (!validateField({ target: field })) {
                        isValid = false;
                        field.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                });

                return isValid;
            }

            // Auto-format phone number
            document.getElementById('phone').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 10) value = value.slice(0, 10);
                e.target.value = value;
            });

            // Skills auto-suggest (bonus feature)
            document.getElementById('skills').addEventListener('input', function(e) {
                const skills = ['JavaScript', 'HTML', 'CSS', 'React', 'Node.js', 'Python', 'Java', 'C++', 'SQL', 'Git'];
                const value = e.target.value.toLowerCase();
                
                if (value && !value.includes(',')) {
                    const match = skills.find(skill => 
                        skill.toLowerCase().startsWith(value)
                    );
                    if (match && value !== match.toLowerCase()) {
                        e.target.value = match;
                    }
                }
            });
        });
    </script>
</body>
