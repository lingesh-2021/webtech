<body>
    <div class="container">
        <h1>üî§ JavaScript String Methods</h1>
        <p class="subtitle">Interactive Demo of String Object Functions</p>
        
        <div class="input-section">
            <input type="text" id="inputString" value="Hello World! JavaScript" placeholder="Enter a string...">
            <input type="number" id="charIndex" value="0" min="0" max="50" placeholder="Index">
            <input type="number" id="unicodeValue" value="72" placeholder="Unicode">
            <button onclick="demonstrateAll()">üöÄ Demonstrate All Methods</button>
        </div>
        
        <div class="results-grid" id="results">
            <!-- Results will be populated by JavaScript -->
        </div>
    </div>

    <script>
        function demonstrateAll() {
            const inputStr = document.getElementById('inputString').value;
            const index = parseInt(document.getElementById('charIndex').value);
            const unicodeVal = parseInt(document.getElementById('unicodeValue').value);
            
            if (!inputStr) {
                alert('Please enter a string!');
                return;
            }
            
            // 1. Character at specified location - charAt()
            const charAtIndex = inputStr.charAt(index) || 'Out of range';
            
            // 2. Unicode of character - charCodeAt()
            const unicodeAtIndex = index < inputStr.length ? inputStr.charCodeAt(index) : 'Out of range';
            
            // 3. Join strings - concat()
            const joinedString = inputStr.concat(' | ', 'String Methods Demo', ' | ', new Date().toLocaleTimeString());
            
            // 4. Unicode to string - fromCharCode()
            const unicodeToString = String.fromCharCode(unicodeVal);
            
            // 5. Convert to uppercase - toUpperCase()
            const upperCaseStr = inputStr.toUpperCase();
            
            // Display results
            displayResults({
                input: inputStr,
                index: index,
                charAt: charAtIndex,
                unicode: unicodeAtIndex,
                joined: joinedString,
                unicodeStr: unicodeToString,
                upperCase: upperCaseStr
            });
        }
        
        function displayResults(data) {
            const resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = `
                <div class="result-card">
                    <div class="method-name">üìç 1. charAt(index) - Character at Position</div>
                    <div class="input-display">Input: "${data.input}"</div>
                    <div class="input-display">Index: ${data.index}</div>
                    <div class="output">Character: "${data.charAt}"</div>
                </div>
                
                <div class="result-card">
                    <div class="method-name">üî¢ 2. charCodeAt(index) - Unicode Value</div>
                    <div class="input-display">Input: "${data.input}"</div>
                    <div class="input-display">Index: ${data.index}</div>
                    <div class="output">Unicode: ${data.unicode}</div>
                </div>
                
                <div class="result-card">
                    <div class="method-name">üîó 3. concat() - Join Strings</div>
                    <div class="input-display">Original: "${data.input}"</div>
                    <div class="output">${data.joined}</div>
                </div>
                
                <div class="result-card">
                    <div class="method-name">üî§ 4. fromCharCode() - Unicode to String</div>
                    <div class="input-display">Unicode Input: ${data.unicodeStr.charCodeAt(0)}</div>
                    <div class="output">String: "${data.unicodeStr}" (Size: ${data.unicodeStr.length})</div>
                </div>
                
                <div class="result-card">
                    <div class="method-name">üîº 5. toUpperCase() - Convert to Uppercase</div>
                    <div class="input-display">Original: "${data.input}"</div>
                    <div class="output">Uppercase: "${data.upperCase}"</div>
                </div>
            `;
        }
        
        // Auto-demo on page load
        window.onload = function() {
            demonstrateAll();
        };
        
        // Real-time update on input change
        document.getElementById('inputString').addEventListener('input', demonstrateAll);
        document.getElementById('charIndex').addEventListener('input', demonstrateAll);
        document.getElementById('unicodeValue').addEventListener('input', demonstrateAll);
    </script>
</body>
